<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="main-panel" xmlns="http://javafx.com/javafx/null"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.HelloController">
    <children>
        <Button onAction="#sayHello" text="Say Hello" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="1.0"
                AnchorPane.rightAnchor="1.0"/>
        <Label fx:id="messageLabel" styleClass="hello-message" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0"
               AnchorPane.topAnchor="1.0"/>
    </children>
</AnchorPane>
